<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/padding_layout_standard"
    android:paddingTop="@dimen/padding_layout_standard"
    android:paddingBottom="@dimen/padding_layout_bottom"
    android:background="@drawable/ic_background_default">

    <ImageView
        android:id="@+id/back_button_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginStart="@dimen/margin_xs"
        android:contentDescription="@string/arrow_back"
        app:layout_constraintBottom_toBottomOf="@id/screen_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/screen_header" />

    <TextView
        android:id="@+id/screen_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choosing_cover"
        android:textColor="@color/white"
        android:textSize="@dimen/text_standard_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/subHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/choosing_cover_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_standard"
        android:layout_marginTop="@dimen/margin_large"
        app:layout_constraintTop_toBottomOf="@id/screen_header" />

    <ImageView
        android:id="@+id/rv_covers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cover_1_small"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:contentDescription="@string/royal_palace"
        android:layout_marginTop="@dimen/margin_large"
        app:layout_constraintTop_toBottomOf="@id/subHeader"
        tools:itemCount="2"
        tools:listitem="@layout/item_image_cover" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent_4D"
        android:layout_margin="@dimen/margin_xl"
        android:elevation="0dp"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="@id/rv_covers"
        app:layout_constraintEnd_toEndOf="@id/rv_covers"
        app:layout_constraintStart_toStartOf="@id/rv_covers"
        app:layout_constraintTop_toTopOf="@id/rv_covers">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            android:layout_margin="@dimen/margin_xxs"
            app:counterMaxLength="75">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/margin_small"
                android:layout_gravity="center"
                android:textSize="@dimen/text_standard"
                android:textColor="@color/white"
                android:inputType="textMultiLine"
                android:background="@color/no_color"
                android:maxLength="70"
                tools:text="Сказка про Ивана-дурака и Серого Волка за границей вашего воображения, но в рамках дозволенного законом" />

        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:enabled="false"
        android:layout_marginHorizontal="@dimen/padding_layout_standard"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

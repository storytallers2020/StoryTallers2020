                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/stepText_7"
                        android:layout_width="match_parent"
                        android:layout_height="73dp"
                        android:gravity="center"
                        android:text="@string/stepText_7"
                        tools:layout_editor_absoluteX="1693dp"
                        tools:layout_editor_absoluteY="549dp" />
                </LinearLayout>

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/imageView8"
                        android:layout_width="223dp"
                        android:layout_height="449dp"

                        android:scaleType="fitXY"
                        android:src="@drawable/step_8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView7"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/stepText_8"
                        android:layout_width="214dp"
                        android:layout_height="83dp"
                        android:gravity="center"
                        android:text="@string/stepText_8"
                        tools:layout_editor_absoluteX="1966dp"
                        tools:layout_editor_absoluteY="549dp" />


                </LinearLayout>

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/stepOK"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:backgroundTint="#00FFFFFF"
        android:gravity="center_horizontal"
        android:text="@string/btn_ok"
        android:textColor="#FFEA00"
        android:textColorLink="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_element_game_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_default"
    android:paddingHorizontal="@dimen/padding_layout_standard"
    android:paddingVertical="@dimen/padding_layout_bottom">

    <TextView
        android:id="@+id/reminder_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_standard"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sentence_input_layout"
        tools:text="@string/intro_text" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/game_field"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/margin_standard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sentence_input_layout"
        tools:visibility="visible">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/story_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/margin_small"
                android:paddingVertical="@dimen/margin_xxs"
                android:textSize="16sp"
                android:gravity="bottom"
                android:lineSpacingExtra="@dimen/line_spacing_extra"
                android:textColor="@color/white"
                tools:text="@string/tale_sample"/>

        </androidx.core.widget.NestedScrollView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/background_transparent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/rules"
            app:layout_constraintBottom_toBottomOf="@id/scroll_view"
            app:layout_constraintTop_toTopOf="@id/scroll_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/sentence_input_layout"
        layout="@layout/sentence_input_layout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>